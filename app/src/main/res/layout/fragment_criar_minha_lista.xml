<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="marketplace.tcc.usjt.br.marketplace.fragment.CriarMinhaListaFragment">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#e7e7e7">
        <AutoCompleteTextView
            android:id="@+id/autocomplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pesquisar produtos"
            android:layout_margin="10dp"/>
    </android.support.v7.widget.CardView>

    <Button
        style="?android:textAppearanceSmall"
        android:id="@+id/adicionar"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:background="#50b43a"
        android:textColor="#FFFFFF"
        android:text="Adicionar"
        android:onClick="adicionarProdutoNaLista"/>

    <ProgressBar
        android:id="@+id/progressBar11"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal" />

    <ListView
        android:id="@+id/lista_produtos_selecionados"
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fastScrollAlwaysVisible="false"></ListView>


</FrameLayout>
